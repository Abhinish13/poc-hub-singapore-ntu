{
    "apiVersion": "v1",
    "kind": "Template",
    "metadata": {
        "name": "notebooks-volume"
    },
    "parameters": [
        {
            "name": "COURSE_NAME",
            "required": true,
            "value": ""
        },
        {
            "name": "VERSION_NUMBER",
            "required": false,
            "value": ""
        },
        {
            "name": "APPLICATION_NAME",
            "required": true,
            "value": "jupyterhub"
        },
        {
            "name": "STORAGE_CAPACITY",
            "required": true,
            "value": "25Gi"
        },
        {
            "name": "NFS_SERVER_NAME",
            "required": true,
            "value": "sds.ntu.edu.sg"
        },
        {
            "name": "NFS_SERVER_SHARE",
            "required": true,
            "value": "/NTU/SPMS/openshift/jupyter"
        }
    ],
    "objects": [
        {
            "apiVersion": "v1",
            "kind": "PersistentVolume",
            "metadata": {
                "name": "${COURSE_NAME}-notebooks-pv${VERSION_NUMBER}"
            },
            "spec": {
                "accessModes": [
                    "ReadWriteMany"
                ],
                "capacity": {
                    "storage": "${STORAGE_CAPACITY}"
                },
        "hostPath": {
            "path": "/var/lib/minishift/openshift.local.pv/pv0089",
            "type": ""
        },
                "claimRef": {
                    "namespace": "${COURSE_NAME}",
                    "name": "${APPLICATION_NAME}-notebooks-pvc${VERSION_NUMBER}"
                },
                "persistentVolumeReclaimPolicy": "Recycle"
            }
        }
    ]
}
